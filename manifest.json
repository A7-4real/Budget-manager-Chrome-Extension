{
  "manifest_version": 2,
  "name": "Budget Manager",
  "version": "1.0",
  "description": "This Extension tracks you overall spendings.",

  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },

  "permissions": ["storage"]
}
